<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lisa.gametest.dao.TScoreMapper">
    
    <resultMap type="TScore" id="TScoreResult">
        <result property="sid"    column="sid"    />
        <result property="uid"    column="uid"    />
        <result property="oid"    column="oid"    />
        <result property="total"    column="total"    />
    </resultMap>

    <sql id="selectTScoreVo">
        select sid, uid, oid, total from t_score
    </sql>

    <select id="selectTScoreList" parameterType="TScore" resultMap="TScoreResult">
        <include refid="selectTScoreVo"/>
        <where>  
            <if test="uid != null "> and uid = #{uid}</if>
            <if test="oid != null "> and oid = #{oid}</if>
            <if test="total != null "> and total = #{total}</if>
        </where>
    </select>
    
    <select id="selectTScoreById" parameterType="Long" resultMap="TScoreResult">
        <include refid="selectTScoreVo"/>
        where sid = #{sid}
    </select>
        
    <insert id="insertTScore" parameterType="TScore" useGeneratedKeys="true" keyProperty="sid">
        insert into t_score
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null ">uid,</if>
            <if test="oid != null ">oid,</if>
            <if test="total != null ">total,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null ">#{uid},</if>
            <if test="oid != null ">#{oid},</if>
            <if test="total != null ">#{total},</if>
         </trim>
    </insert>

    <update id="updateTScore" parameterType="TScore">
        update t_score
        <trim prefix="SET" suffixOverrides=",">
            <if test="uid != null ">uid = #{uid},</if>
            <if test="oid != null ">oid = #{oid},</if>
            <if test="total != null ">total = #{total},</if>
        </trim>
        where sid = #{sid}
    </update>

    <delete id="deleteTScoreById" parameterType="Long">
        delete from t_score where sid = #{sid}
    </delete>

    <delete id="deleteTScoreByIds" parameterType="String">
        delete from t_score where sid in 
        <foreach item="sid" collection="array" open="(" separator="," close=")">
            #{sid}
        </foreach>
    </delete>
    
</mapper>